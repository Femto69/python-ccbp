n=int(input())
for i in range(1,n+1):
    str1=" "*(n-i)+""
    s1=5
    s2=5
    if(i==1 or i==n):
        for j in range(0,i):
            str1=str1+str(s1+j)+" "
        print(str1)
    else:
        for k in range(0,i):
            if(k==0 or k==i-1):
                str1=str1+str(s2+k)+" "
            else:
                str1=str1+" "+" "
        print(str1)